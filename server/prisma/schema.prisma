generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  codes     Code[]
  createdAt DateTime @default(now())
}

model Code {
  id         String   @id @default(uuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  code       String
  stdin     String
  language   String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}


